<%= render 'users/userinfo', user: @user %>
<%= render 'books/newbook', book: @book %>

    <div class="col-xs-9">
      <h2>Book detail</h2>
      <table class="table table-hover tableinverse">
        <tbody>
            <tr>
              <td>
                <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-square pull-left profile-img", fallback: "no_image.jpg" %>
                </td>
              <td><%= @book.title %></td>
              <td> <%= @book.body %> </td>
            <% if @book.user == current_user %>
              <td><%= link_to "edit", edit_book_path(@book), class: "btn-sm btn-success Edit" %></td>
                <td><%= link_to "destroy", book_path(@book), class: "btn-sm btn-danger Destroy", method: :delete %></td>
              <% end %>
            </tr>
        </tbody>
      </table>
      </div>
    </div>
</div>
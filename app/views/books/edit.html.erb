<div class="container">
  <div class="row">
  	<div class="col-md-6 col-md-offset-3">
      <h1>Editing Book</h1>
      <%= form_for(@book) do |f| %>
        <div class="field row">
          <%= f.label :Title %>
          <%= f.text_field :title, class: "col-xs-12", placeholder: "" %>
        </div><br />

        <div class="field row">
          <%= f.label :Option %>
          <%= f.text_area :body, class: "col-xs-12", placeholder: "" %>
        </div><br />

        <div class="actions row">
          <%= f.submit "Update Book", class: "btn btn-primary col-xs-12" %>
        </div><br />
      <% end %>

      <%= link_to "Show", book_path(@book) %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>
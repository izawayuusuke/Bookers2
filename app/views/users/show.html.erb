<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <td><%= current_user.name %></td>
          </tr>

          <tr>
            <th>introduction</th>
            <td><%= current_user.introduction %></td>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <a class="col-xs-12 btn btn-default">
          <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
        </a>
      </div>

      <h2>New Book</h2>
      <%= form_for(@book) do |f| %>
      <div class="field row">
        <%= f.label :Title %>
        <%= f.text_field :title, class: "col-xs-12 book_title" %>
      </div><br />

      <div class="field row">
        <%= f.label :Option %>
        <%= f.text_area :body, class: "col-xs-12 book_body" %>
      </div><br />

      <div class="actions row">
          <%= f.submit "Create Book", class: "btn btn-primary col-xs-12"%>
      </div>

      <% end %>
    </div>

    <div class="col-xs-9">
      <h2>Books</h2>
      <table class="table table-hover tableinverse">
        <thead>
  	      <tr>
  	        <th></th>
  	        <th>Title</th>
  	        <th>Option</th>
  	        <th colspan="3"></th>
  	      </tr>
        </thead>

        <tbody>
  	      <% @books.each do |book| %>
  	        <tr>
              <td></td>
  	          <td><%= book.title %></td>
  	          <td> <%= book.body %> </td>
  	        </tr>
  	      <% end %>
        </tbody>
      </table>
      </div>
    </div>
</div>
<% if flash[:notice] %>
  <div id="flash[:notice]">
  	<%= flash[:notice] %>
  </div>
<% end %>


<div class="container">
  <div class="row">
  	<div class="col-xs-3">
  	  <h2>User info</h2>
  	  <%= form_for(@user) do |f| %>

  	  <% if @user.errors.any? %>
  	    <div id="explanation">
  	      <%= @user.errors.count %>errors prohibited this obj from being saved:
  	      <ul>
  	      	<% @user.errors.full_messages.each do |message| %>
  	      	  <li><%= message %>
  	      	<% end %>
  	      </ul>
  	    </div>
  	  <% end %>

  	  <div class="field">
  	    <%= f.label :name %>
  	    <%= f.text_field :name %>
  	  </div><br />

  	  <div class="field">
  	    <%= f.label :Image %>
  	    <%= f.attachment_field :profile_image %>
  	  </div><br />

  	  <div class="field">
  	    <%= f.label :Introduction %>
  	    <%= f.text_area :introduction %>
  	  </div><br />

  	  <div class="actions">
  	    <%= f.submit "Update User" %>
  	  </div>

  	  <% end %>
  	</div>
  </div>
</div>

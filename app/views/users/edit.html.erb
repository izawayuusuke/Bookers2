<h2>User info</h2>
  <%= form_for(@user) do |f| %>

  <% if @user.errors.any? %>
  	<div id="explanation">
  	  <%= @user.errors.count %>errors prohibited this obj from being saved:
  	  <ul>
  	    <% @user.errors.full_messages.each do |message| %>
  	      <li><%= message %>
  	    <% end %>
  	  </ul>
  	</div>
  <% end %>

    <div class="field">
  	  <%= f.label :name %>
  	  <%= f.text_field :name %>
  	</div>

    <div class="field">
  	  <%= f.label :Image %>
  	  <%= f.attachment_field :profile_image %>
    </div>

    <div class="field">
  	  <%= f.label :Introduction %>
  	  <%= f.text_area :introduction %>
    </div>

    <div class="actions">
  	  <%= f.submit "Update User" %>
    </div>

  <% end %>
